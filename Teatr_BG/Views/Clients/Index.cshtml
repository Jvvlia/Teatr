@model IEnumerable<Teatr_BG.Models.DbModels.Client>

@{
    ViewBag.Title = "Index";
}

<h2>Lista klientów</h2>
<div style="background-color: #E6DAA5; margin: 15px; padding: 15px">
    <p>
        @Html.ActionLink("Dodaj klienta", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                Imię
            </th>
            <th>
                Nazwisko
            </th>
            <th>
                Numer telefonu
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.ActionLink("Edytuj informacje", "Edit", new { id = item.ClientID }) |
                @Html.ActionLink("Rozwiń", "Details", new { id = item.ClientID }) |
                @Html.ActionLink("Usuń klienta", "Delete", new { id = item.ClientID })
            </td>
        </tr>
        }

    </table>
</div>
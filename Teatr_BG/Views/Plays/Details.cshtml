@model Teatr_BG.Models.DbModels.Play

@{
    ViewBag.Title = "Details";
}

<h2>Szczegóły</h2>
<div style="background-color: #E6DAA5; margin: 15px; padding: 15px">
    <div>
        <h4>Spektakle</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Nazwa
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NameP)
            </dd>

            <dt>
                Data
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateP)
            </dd>

            <dt>
                Cena biletu
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Edytuj informacje", "Edit", new { id = Model.PlayID }) |
        @Html.ActionLink("Powrót do listy", "Index")
    </p>
</div>
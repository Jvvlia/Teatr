@model Teatr_BG.Models.DbModels.Play

@{
    ViewBag.Title = "Delete";
}

<h2>Usuń</h2>
<div style="background-color: #E6DAA5; margin: 15px; padding: 15px">
    <h3>Na pewno chcesz usunąć spektakl?</h3>
    <div>
        <h4>Spektakle</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Nazwa
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NameP)
            </dd>

            <dt>
                Data
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateP)
            </dd>

            <dt>
                Cena biletu
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>

        </dl>

        @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Usuń" class="btn btn-default" /> |
            @Html.ActionLink("Powrót do listy", "Index")
        </div>
    }
    </div>
</div>